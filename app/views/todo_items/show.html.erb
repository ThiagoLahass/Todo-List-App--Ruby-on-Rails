<% content_for :title, "Todo item" %>

<div class="card-header d-flex justify-content-left">
  <div class="d-flex gap-4 align-items-center">
    <div>
      <%= link_to todo_list_todo_items_path(@todo_item.todo_list), class:"btn btn-dark" do %>
        <i class="fas fa-angle-left"></i>
      <% end %>
    </div>
    <div> 
      <h5 class="m-0">
        <b><%= @todo_item.description %> </b>
      </h5>
    </div> 
  </div>
</div>

<div class="card-body">
  <p>
    <b>Completed:</b>
    <%= @todo_item.completed %>
  </p>

  <p>
    <b>Completed at:</b>
    <%= @todo_item.completed_at %>
  </p>

  <div class="d-flex mt-5">
    <%= link_to 'Delete this Todo Item', [@todo_item.todo_list, @todo_item], method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>
