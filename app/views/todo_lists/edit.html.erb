<% content_for :title, "Editing todo list" %>

<div class="card-header d-flex justify-content-left">
  <div class="d-flex gap-4 align-items-center">
    <div>
      <%= link_to todo_lists_path, class:"btn btn-dark" do %>
        <i class="fas fa-angle-left"></i>
      <% end %>
    </div>
    <div> 
      <h5 class="m-0">
        <b>Edit Todo List</b>
      </h5>
    </div> 
  </div>
</div>

<div class="card-body">
  <%= render "form", todo_list: @todo_list %>

  <div class="d-flex mt-5">
    <%= link_to 'Delete this Todo List', @todo_list, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>
